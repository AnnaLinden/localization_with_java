<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.localised_hello.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Button fx:id="firstButton" onAction="#onbtnENClick" text="English"/>
    <Button fx:id="secondButton" onAction="#onbtnFAClick" text="Persian"/>
    <Button fx:id="thirdButton" onAction="#onbtnJPClick" text="Japanese"/>
    <Label fx:id="nameLabel"/>

</VBox>
